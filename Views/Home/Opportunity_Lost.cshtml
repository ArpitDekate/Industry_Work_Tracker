
@{
    ViewBag.Title = "Opportunity_Converted";
}

<style>
    .table-sticky > thead > tr > th,
    .table-sticky > thead > tr > td {
        background: #009688;
        color: #fff;
        top: 0px;
        position: sticky;
    }

    .table-height {
        height: 250px;
        display: block;
        overflow: scroll;
        width: 100%;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
    }
</style>
<head>
    <script>
        $(document).ready(function () {
            $("#mySearch3").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tab3 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</head>


<body style=" background-image: url('../../Content/img/back1.png')" ;>
    <input type="text" id="mySearch3" class="form-control" style=" min-width: 100%; align-self:center" placeholder="Search" />
    <div class="table-responsive table-height">
        <table class="table table-striped  table-bordered table-sticky" id="tab3">
            <thead>
                <tr>
                    <th>Opportunity ID </th>
                    <th>Date</th>
                    <th>Opportunity Status</th>
                    <th>Description</th>
                    <th>Opportunity Value</th>
                    <th>Opportunity Domain</th>
                    <th> Owner Delivery</th>
                    <th> Owner Sales</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var j in ViewBag.data3)
                {
                    <!--   <tr  id="@j.Opportunity_id" data-toggle="modal"  data-target="#orderModal">-->
                    <tr>
                         @if (@j.Opportunity_status == "Lost" || @j.Opportunity_status == "lost" || @j.Opportunity_status == "Missed" || @j.Opportunity_status == "missed"
                          || @j.Opportunity_status == "Failed" || @j.Opportunity_status == "falied")
                          {
                             <td>@j.Opportunity_id</td>
                             <td>@j.O_date</td>
                             <td>@j.Opportunity_status</td>
                             <td>@j.Opportunity_description</td>
                             <td>@j.Opportunity_value</td>
                             <td>@j.Opportunity_domain</td>
                             <td>@j.Opportunity_owner_delivery</td>
                             <td>@j.Opportunity_owner_sales</td>
                          }
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="modal fade" id="lostModal"> <!--data-backdrop="static" data-keyboard="false">-->
        <div class="modal-dialog modal-lg modal-dialog-centered" style="min-width:90%">
            <div class="modal-content">
               
                <div class="modal-header">
                    <h4 class="modal-title">Opportunity Details (Lost) </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div  class="modal-body" id="Details">

                </div>
              
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>

<script>

    $(function () {
        $('#lostModal').modal({
            keyboard: true,
            show: false,

        }).on('show', function () {
            var getIdFromRow = $(event.target).closest('tr').data('id');
             $(this).find('#Details').html($('<b> Id selected: ' + getIdFromRow + '</b>'))
        });
    });

</script>



